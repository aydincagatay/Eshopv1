<form class="form-horizontal" method="post">
    <div class="form-group">
        <label  class="col-sm-2 control-label hor-form">Id</label>
        <div class="col-sm-10">
            <input type="text" name="comment[Id]" class="form-control" value="{{ comment.Id }}" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="{{ comment2[0].name }}" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="{{ comment2[0].email }}" disabled>
            <input type="hidden" class="form-control" name="comment[userid]" value="{{ comment.userid }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Ürün</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="{{ comment2[0].title }}" disabled>
            <input type="hidden" class="form-control" name="comment[productid]" value="{{ comment.productid }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Yorum</label>
        <div class="col-sm-10">
            <input type="text" name="comment[comment]" class="form-control" value="{{ comment.comment }}">
        </div>
        </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">status</label>
        <div class="col-sm-10">
            <select name="comment[status]" class="form-control">
                <option>{{ comment.status }}</option>
                <option>True</option>
                <option>False</option>
            </select>
        </div>
    </div>

        <div class="form-group">
            <label class="col-sm-2 control-label hor-form">created_at</label>
            <div class="col-sm-10">
                <input type="text" name="comment[created_at]" class="form-control" value="{{ comment.created_at|date("m/d/Y") }}" disabled>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label hor-form">updated_at</label>
            <div class="col-sm-10">
                <input type="text" name="comment[updated_at]" class="form-control" value="{{ comment.updated_at|date("m/d/Y") }}" disabled>
            </div>
        </div>



    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="hidden" name="token3" value="{{ csrf_token('form-comment') }}"/>
            <button type="submit" class="btn btn-default">Güncelle</button>
        </div>
    </div>
</form>