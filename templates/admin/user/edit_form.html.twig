{% extends 'adminbase.html.twig' %}

{% block title %}Üye düzenle{% endblock %}

{% block content %}
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet'
          type='text/css'/>
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="{{ asset('admin') }}/css/icon-font.min.css" type='text/css'/>
    <h3>Üye Düzenle

    </h3>
    <section class="content-box">
        <div class="grid-form1">
            <h3 id="forms-horizontal">Horizontal form</h3>
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label hor-form">Adı Soyadı</label>
                    <div class="col-sm-10">
                        <input type="text" name="user[name]" class="form-control" value="{{ userdetail[0].name }}" placeholder="Adı Soyadı">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label hor-form">Email</label>
                    <div class="col-sm-10">
                        <input type="email" name="user[email]" class="form-control" value="{{ userdetail[0].email }}" id="inputEmail3" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label hor-form">Password</label>
                    <div class="col-sm-10">
                        <input type="text" name="user[password]" class="form-control" value="{{ userdetail[0].password }}" id="inputPassword3" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label hor-form">Adres</label>
                    <div class="col-sm-10">
                        <input type="text" name="user[address]" class="form-control" value="{{ userdetail[0].address }}" id="inputPassword3" placeholder="Adres">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label hor-form">Şehir</label>
                    <div class="col-sm-10">
                        <input type="text" name="user[city]" class="form-control" value="{{ userdetail[0].city }}" id="inputPassword3" placeholder="Şehir">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label hor-form">Telefon numarası</label>
                    <div class="col-sm-10">
                        <input type="text" name="user[phone]" class="form-control" value="{{ userdetail[0].phone }}" id="inputPassword3" placeholder="Telefon numarası">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label hor-form">Rolü</label>
                    <div class="col-sm-10">
                        <select name="user[roles]" class="form-control">
                            {% for item in userdetail[0].roles|join %}
                                <option selected>{{ item }}</option>
                            {% endfor %}
                            <option>ROLE_ADMIN</option>
                            <option>ROLE_USER</option>
                            <option>ROLE_USER,ROLE_ADMIN</option>
                        </select>
               </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="hidden" name="token1" value="{{ csrf_token('form-uedit') }}"/>
                        <button type="submit" class="btn btn-default">Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <script src="{{ asset('admin') }}/js/jquery.nicescroll.js"></script>
    <script src="{{ asset('admin') }}/js/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('admin') }}/js/bootstrap.min.js"></script>
    <!-- /Bootstrap Core JavaScript -->
    <br><!-- /Footer ile arada boşluk kalmamıştı br attım.Kod eksik geldi büyük ihtimal -->
{% endblock %}
