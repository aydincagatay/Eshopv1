<form class="form-horizontal" method="post">
    <div class="form-group">
        <label  class="col-sm-2 control-label hor-form">Kategorisi</label>
        <div class="col-sm-10">
            <select name="product[category_id]" class="form-control">
                <option value="{{ product.categoryid }}">{{ product.categoryid }}</option>
                  {% for cat in catlist %}
                        <option value="{{ cat.id }}">{{ cat.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label  class="col-sm-2 control-label hor-form">Title</label>
        <div class="col-sm-10">
            <input type="text" name="product[title]" class="form-control" value="{{ product.title }}"  placeholder="Title">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Keywords</label>
        <div class="col-sm-10">
            <input type="text" name="product[keywords]" class="form-control" value="{{ product.keywords }}"  placeholder="Anahtar Kelimeler">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Descriptions</label>
        <div class="col-sm-10">
            <input type="text" name="product[description]" class="form-control" value="{{ product.description }}"  placeholder="Açıklamalar">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">P.price</label>
        <div class="col-sm-10">
            <input type="text" name="product[pprice]" class="form-control" value="{{ product.pprice }}"  placeholder="Alış Fiyatı">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">S.price</label>
        <div class="col-sm-10">
            <input type="text" name="product[sprice]" class="form-control" value="{{ product.sprice }}"  placeholder="Satış Fiyatı">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Miktar</label>
        <div class="col-sm-10">
            <input type="text" name="product[amount]" class="form-control" value="{{ product.amount }}"  placeholder="Miktar">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Aktif durumu</label>
        <div class="col-sm-10">
            <select name="product[status]" class="form-control">
                <option>{{ product.status }}</option>
                <option>True</option>
                <option>False</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label hor-form">Detay</label>
        <div class="col-sm-10">
            <textarea id="detail" name="product[detail]"> {{ product.detail }}</textarea>
            <script>
                ClassicEditor
                    .create( document.querySelector( '#detail' ), {
                        removePlugins: [ 'Heading', 'Link' ],
                        toolbar: [ 'bold', 'italic', 'bulletedList', 'numberedList', 'blockQuote' ]
                    } )
                    .catch( error => {
                        console.log( error );
                    } );
            </script>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="hidden" name="token" value="{{ csrf_token('form-product') }}"/>
            <button type="submit" class="btn btn-default">Güncelle</button>
            <a href="{{ path('admin_product_index') }} "class="btn btn-default">back to list</a>
        </div>
    </div>
</form>