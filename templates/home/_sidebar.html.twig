<style>
    ul#menu-v, #menu-v ul
    {
        width:200px; /* Main Menu width */
        border:1px solid rgba(190,190,190,0.3);
        list-style:none; margin:0; padding:0;
        z-index:9;
    }
    #menu-v a:hover >
    {
        background-color: #2c618f;
        color: #2c618f;
    }
    #menu-v li
    {
        margin:0;padding:0;
        position: relative;
        background-color: #FFA800;
        transition:background 0.5s;
    }
    #menu-v li:hover
    {
    }

    #menu-v a
    {
        font:normal 17px Arial;
        border-top:1px solid #2c618f;
        display:block;
        color: whitesmoke;
        text-decoration:none;
        line-height:30px;
        padding-left:22px;
        position:relative;
    }

    #menu-v li:first-child a
    {
        border-top:0;
    }

    #menu-v a.arrow::after{
        content:'';
        position:absolute;
        display:inline;
        top:70%;
        margin-top:-4px;
        right:8px;
        border-width:4px;
        border-style:solid;
        border-color:transparent transparent transparent white;
        transition:border-color 0.5s;
    }

    #menu-v li a.arrow:hover::after
    {
        border-color:transparent transparent transparent #2c618f;
    }

    /*Sub level menu items
    ---------------------------------------*/
    #menu-v li ul
    {
        min-width:180px; /* Sub level menu min width */
        position:absolute;
        display:none;
        left:100%;
        top:50%; transform:translateY(-50%);
    }

    #menu-v li:hover > ul
     {
         display:block;
     }

</style>


