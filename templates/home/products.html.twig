{% extends 'frontbase.html.twig' %}

{% block title %} {{ data[0].title }} {% endblock %}
{% block keywords %} {{ data[0].keywords }} {% endblock %}
{% block description %} {{ data[0].description }} {% endblock %}
{% block sidebar %} {% include 'home/_sidebar.html.twig' %} {% endblock %}
{% block content %}

    <div class="features_items"><!--features_items-->
        <h2 class="title text-center">{{ data[0].title }}</h2>
        {% for rs in products %}
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <a href="{{ path('product_detail', {'id': rs.id}) }}" class="productinfo text-center">
                        <img src="{{ asset("uploads") }}/images/{{ rs.image }}">
                        <h2>{{ rs.sprice }}₺</h2>
                        <p>{{ rs.title }}</p>
                    </a>
                    <a href="{{ path('product_detail', {'id': rs.id}) }}" class="product-overlay">
                        <div class="overlay-content">
                            <h3>Ürüne git</h3>
                            <h2>{{ rs.sprice }}₺</h2>
                            <p>{{ rs.title }}</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>


    </div>
    </div>
    </div>
    </section>

{% endblock %}
