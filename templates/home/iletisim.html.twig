{% extends 'frontbase.html.twig' %}

{% block title %}Bizimle iletişime geçin-{{ data[0].title }} {% endblock %}
{% block keywords %} {{ data[0].keywords }} {% endblock %}
{% block description %} {{ data[0].description }} {% endblock %}
{% block content %}
    <div id="contact-page" class="container">
        <div class="row">
            <div class="col-sm-8">
                <div class="contact-form">
                    <h2 class="title text-center">Bizimle iletişime geçin</h2>
                    {{ include('messages.html.twig') }}
                    <form method="post" name="messages" class="contact-form row">
                        <div class="form-group col-md-6">
                            <input type="text" name="messages[name]" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="email" name="messages[email]" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group col-md-12">
                            <input type="text" name="messages[subject]" class="form-control" placeholder="Subject">
                        </div>
                        <div class="form-group col-md-12">
                            <textarea name="messages[message]" id="messages[message]" class="form-control" rows="8" placeholder="Your Message Here"></textarea>
                        </div>
                        <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary pull-right">Gönder    <i class="fa fa-arrow-circle-o-right"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="contact-info">
                    <h2 class="title text-center">İletişim bilgilerimiz</h2>
                    <address>
                        {{ data[0].contact|raw }}
                    </address>
                    <div class="social-networks">
                        <h2 class="title text-center">Sosyal medyada biz</h2>
                        <ul>
                            <li>
                                <a href="#"><i class="fa fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-google-plus"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-youtube"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



