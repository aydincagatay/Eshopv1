<div class="features_items"><!--features_items-->
    <h2 class="title text-center">Ürünlerimiz</h2>
    {% for product in products %}
    <div class="col-sm-4">
        <div class="product-image-wrapper">
            <div class="single-products">
                <a class="productinfo text-center" href="{{ path('product_detail', {'id': product.id}) }}">
                    <img src="{{ asset("uploads") }}/images/{{ product.image }}">
                    <h2>{{ product.title }}</h2>
                    <h2>{{ product.pprice }}₺</h2>
                </a>
                <a class="product-overlay" href="{{ path('product_detail', {'id': product.id}) }}">
                    <div class="overlay-content">
                        <h3>Ürüne git</h3>
                        <h2>{{ product.title }}</h2>
                        <h2>{{ product.sprice }}₺</h2>
                    </div>
                </a>
            </div>
        </div>
    </div>
    {% endfor %}

</div><!--features_items-->